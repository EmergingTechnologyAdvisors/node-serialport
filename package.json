{
  "name": "serialport-monorepo",
  "private": true,
  "version": "0.0.0",
  "description": "Node.js packages to access serial ports, process data from them and speak many protocols",
  "engines": {
    "node": ">=6.0.0"
  },
  "license": "MIT",
  "scripts": {
    "rebuild": "lerna exec --scope @serialport/bindings -- npm run rebuild",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "docs": "jsdoc -c ./.jsdoc.json ",
    "format": "eslint packages test --fix",
    "generate": "plop",
    "lint": "eslint packages test && lerna exec --scope @serialport/bindings -- npm run lint",
    "postinstall": "lerna bootstrap --no-ci",
    "prebuild": "lerna exec --scope @serialport/bindings -- npm run prebuild",
    "publish": "lerna publish",
    "test": "nyc --reporter=html --reporter=text --reporter lcovonly mocha",
    "test:arduino": "TEST_PORT=$(./bin/find-arduino.js) npm test",
    "test:require": "lerna exec \"node -e \\\"require('./')\\\"\"",
    "test:watch": "mocha -w"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/node-serialport/node-serialport.git"
  },
  "maintainers": [
    {
      "name": "Francis Gulotta",
      "email": "wizard@roborooter.com",
      "url": "https://www.roborooter.com"
    }
  ],
  "dependencies": {},
  "devDependencies": {
    "@reconbot/jsdoc-theme": "^1.0.3",
    "bluebird": "^3.5.0",
    "cc": "^1.0.1",
    "chai": "^4.0.2",
    "chai-subset": "^1.5.0",
    "codecov": "^3.0.4",
    "eslint": "^5.0.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-promise": "^4.0.0",
    "jsdoc": "^3.5.5",
    "lerna": "^3.1.2",
    "mocha": "^5.2.0",
    "nyc": "^13.0.0",
    "plop": "^2.0.0",
    "prebuild": "^8.0.0",
    "prettier": "^1.14.2",
    "proxyquire": "^2.0.0",
    "sinon": "^6.0.1"
  }
}
